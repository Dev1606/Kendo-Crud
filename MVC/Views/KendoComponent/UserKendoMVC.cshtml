@{
    ViewData["Title"] = "Kendo Component MVC";
}

@* <div id="grid"></div>

<center>
    <h1>Employee Data</h1> *@
@* </center> *@
<div class="table-responsive">

    <center>
        @* Message *@
        <div class="alert alert-success text-center" role="alert" id="messageSuccess"></div>
        <div class="alert alert-danger text-center" role="alert" id="messageFail"></div>
    </center>

    @* Table HTML *@
    <table class="table table-dark table-striped">
        <thead>
            <th scope="col">Employee Id</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Gender</th>
            <th scope="col">DOB</th>
            <th scope="col">Shift</th>
            <th scope="col">Department</th>
            <th scope="col">Image</th>
        </thead>
        <tbody id="TableContent">

        </tbody>
    </table>
</div>

<center>
    <h1>Employee Data</h1>
</center>
<div class="container">
    <div class="row col-6 offset-3">

        <div class="row">
            <label for="EmpName">Employee Name:</label>
            <input id="EmpName" class="form-control" />
        </div>

        <div class="row mt-3">
            <label for="GenderRadioButton">Gender:</label>
            <div id="GenderRadioButton" class="form-check">
                <!-- Gender radio buttons will be rendered here -->
            </div>
        </div>

        <div class="row mt-3">
            <label for="dob">Date of Birth:</label>
            <input id="dob" class="form-control" />
        </div>

        <div class="row mt-3">
            <label for="ShiftCheckbox">Shift:</label>
            <div id="ShiftCheckbox" class="form-check">
                <!-- Shift checkboxes will be rendered here -->
            </div>
        </div>

        <div class="row mt-3">
            <label for="ImageUpload">Image:</label>
            <input type="file" id="ImageUpload" class="form-control-file" />
        </div>

        <div class="row mt-3">
            <label for="DepartmentDorpDown">Department:</label>
            <input id="DepartmentDorpDown" class="form-control" />
        </div>

        <div class="row mt-3">
            <button id="SubmitButton" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/KendoComponentMVC.js" asp-append-version="true"></script>
}